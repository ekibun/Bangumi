<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_margin="3dp"
              android:paddingStart="10dp"
              android:paddingEnd="10dp"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              android:background="@drawable/bg_round_rect"
              android:backgroundTint="@color/colorTransGrey"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:clickable="true"
              android:focusable="true">
    <ImageView
        android:id="@+id/item_emoji"
        android:visibility="gone"
        android:layout_width="20dp"
        android:scaleType="fitCenter"
        android:layout_height="20dp"
        tools:src="@drawable/err_404"
        tools:ignore="ContentDescription"/>
    <TextView
            android:id="@+id/item_tag_name"
            tools:text="Tag Name"
            android:textColor="@color/color_selectable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/item_tag_count"
            android:paddingStart="4dp"
            android:alpha="0.6"
            android:textSize="@dimen/textSizeSmall"
            tools:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry"/>
    <ImageView
            android:id="@+id/item_tag_del"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_clear"
            android:contentDescription="@string/subject_dialog_remove_tag"/>
</LinearLayout>